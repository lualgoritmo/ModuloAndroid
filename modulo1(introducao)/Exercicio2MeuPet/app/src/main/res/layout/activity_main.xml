<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:background="@color/cor_primaria"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/txt_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cor_secundaria"
        android:text="@string/subtitle_photo"
        android:textSize="@dimen/txtfonttitle16"
        android:textAllCaps="true"
        android:gravity="center"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cachorro_lindo"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/txtnamepet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_pet"
        android:textSize="@dimen/txtsizefont12"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/txtcolor"
        />
    <TextView
        android:id="@+id/txtracapet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/raca_pet"
        android:layout_gravity="center"
        android:textSize="@dimen/txtsizefont12"
        android:gravity="center"
        android:textColor="@color/txtcolor"
        />
    <TextView
        android:id="@+id/txtidadepet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/idade_pet_2_anos"
        android:textSize="@dimen/txtsizefont12"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/txtcolor"
        />
    <Button
        android:id="@+id/btn_mensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_msg"
        android:textSize="@dimen/btntxtsize14"
        android:textAllCaps="true"
        android:layout_margin="48dp"
        android:layout_gravity="center"
        android:background="@color/btnbackground"
        />
    <TextView
        android:id="@+id/txtview_mensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize18"
        android:background="@color/backgroundmsg"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/txtcolor"
        />
</LinearLayout>